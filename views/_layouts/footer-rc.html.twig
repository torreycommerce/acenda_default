{% spaceless %}
<footer class="footer">
	<section class="bg-dark newsletter py-5 text-center" id="footer">
		<div class="container no-cart">
			<div class="row">
				<div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
					<h2 class="text-white">Let's Keep In Touch</h2>
					<p class="fsd1 text-white">Sign up for coupons, sales & special deals.</p>
					<form class="js-signup">
						<fieldset><legend class="sr-only">{{ app.params.site.title }} Email List Signup</legend>
							<label class="sr-only text-white" for="SignupInput">Email Address</label>
							<div class="input-group">
								<input type="email" class="form-control form-control-lg js-signup-email" id="SignupInput" type="email" placeholder="Email Address" name="email">
								<div class="input-group-append">
									<button type="submit" class="btn btn-lg btn-primary js-signup-btn"><i class="fas fa-envelope mr-0"></i><span class="sr-only">Subscribe</span></button>
								</div>
							</div>
							<div class="newsletter-response"></div>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
	</section>
	<div class="triple-help py-5 text-center"><div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6 col-lg-3 g mb-4 mb-lg-0">
				<div class="h3 color-1">How can we help?</div>
			</div>
			<div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
				<a href="tel:18005551234">
					<i class="fa fa-phone"></i><span>1-800-555-1234</span>
				</a>
			</div>
			<div class="col-md-6 col-lg-3 mb-4 mb-md-0">
				<a href="{{app.url}}/content/help">
					<i class="fa fa-question-circle"></i><span>Help Center</span>
				</a>
			</div>
			<div class="col-md-6 col-lg-3">
				<a href="mailto:help@{{app.url}}?Subject={{ app.params.site.title }}%20Help">
					<i class="fa fa-envelope"></i><span>help@acmestore.com</span>
				</a>
			</div>
		</div>
	</div></div>
	<div class="bg-light py-5 text-center no-cart"><div class="container g">
		<ul class="list-inline foot-links">
			<li><a href="{{app.url}}/content/coupons">Coupons</a></li>
			<li><a href="{{app.url}}/account">Account</a></li>
			<li><a href="{{app.url}}/order">Track Order</a></li>
			<li><a href="{{app.url}}/content/shipping">Shipping</a></li>
			<li><a href="{{app.url}}/return">Returns</a></li>
		</ul>
	</div></div>
	<div class="foot-copy py-5 text-center text-muted"><div class="container g">
		<ul class="list-inline fsi1 mb-4">
			<li><i class="fab fa-cc-visa mr-0"></i><span class="sr-only">We Accept Visa</span></li>
			<li><i class="fab fa-cc-mastercard mr-0"></i><span class="sr-only">We Accept Mastercard</span></li>
			<li><i class="fab fa-cc-discover mr-0"></i><span class="sr-only">We Accept Discover</span></li>
			<li><i class="fab fa-cc-amex mr-0"></i><span class="sr-only">We Accept American Express</span></li>
			<li><i class="fab fa-cc-paypal mr-0"></i><span class="sr-only">We Accept Paypal</span></li>
		</ul>
		<ul class="list-inline fsi1 social">
			<li><a class="" href="#" target="_blank"><i class="fab fa-instagram mr-0"></i><span class="sr-only">Follow {{ app.params.site.title }} on Instagram</span></a>
			</li><li><a class="" href="#" target="_blank"><i class="fab fa-twitter mr-0"></i><span class="sr-only">Follow {{ app.params.site.title }} on Twitter</span></a>
			</li><li><a class="" href="#" target="_blank"><i class="fab fa-facebook-f mr-0"></i><span class="sr-only">Follow {{ app.params.site.title }} on Facebook</span></a>
			</li>
		</ul>
		<ul class="list-inline fsd1">
			<li><a href="{{app.url}}/content/privacy-policy">Privacy</a></li>
			<li><a href="{{app.url}}/content/accessibility">Accessibility</a></li>
			<li><a href="{{app.url}}/content/terms-and-conditions">Terms</a></li>
			<li>&copy;{{"now"|date("Y")}} {{ app.params.site.title }}</li>
		</ul>
	</div></div>
</footer>
{% endspaceless %}