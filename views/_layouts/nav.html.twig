{% set categories = api.get('/category/sapling') %}
{#{% set more_info = api.get(‘category’,{slug: item.slug}) %}#}
{% spaceless %}

<nav id="nav" class="bgb navbar hidden-sm hidden-xs">
    <div class="container">
		<ul class="nav navbar-nav">
		{% for main_category,items in categories %}
			{% if items.limb|length %}
				<li class="category{{items.id}} dropdown">
					<a href="{{app.url}}/category/{{items.slug}}" class="dropdown-toggle" data-toggle="dropdown">
						<span>{{main_category}}</span><i class="fa fa-caret-down"></i>
					</a>
					<ul class="dropdown-menu">
						{% for category,subitems in items.limb %}
							{% if subitems.limb|length %}
								  {{ base.subcategory(category,subitems) }}
							{% else %}
								<li class="category{{subitems.id}}"><a href="{{app.url}}/category/{{subitems.slug}}">{{category}}</a></li>
							{% endif %}
						{% endfor %}
					</ul>
				</li>
			{% else %}
				<li class="category{{items.id}}"><a href="{{app.url}}/category/{{items.slug}}">{{main_category}}</a></li>
			{% endif %}
		{% endfor %}
		</ul>
    </div>
</nav>
{# End desktop nav #}

{% endspaceless %}