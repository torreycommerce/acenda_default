{# Begin desktop toolbar #}
<div class="row hidden-xs hidden-sm">
    <div class="col-md-12">
        <ul class="list-inline list-unstyled">
            <li> <a href="{{app.url}}/contact">Contact Us</a> </li>
            {% if app.user.id != '' %}
            <li> <a href="{{app.url}}/account/orders">Easy Returns</a> </li>
            {% else %}
            <li> <a href="{{app.url}}/return">Easy Returns</a> </li>
            {% endif %}           
            {% if app.user.id is null %}
            {# Begin login button #}
            <li>
                 <div class="btn-group my-account">
                    <a target="_new" type="button" id="dropdown-account" class="btn dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-user"></i>My Account<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="{{app.url}}/account/login">Sing In / Sign up</a></li>
                        <li><div class="divider"></div></li>
                        {% if app.user.id != '' %}
                        <li> <a href="{{app.url}}/account/orders">Order Status</a> </li>
                        {% else %}
                        <li> <a href="{{app.url}}/order">Order Status</a> </li>
                        {% endif %}
                         <li> <a href="{{app.url}}/registry/search">Gift Registry</a> </li>

                    </ul>
                </div>
            </li>
            {# End login button #}
            {% else %}
            {% set customer = api.get('/customer/' ~ app.user.id) %}
            <li>
                <div class="btn-group my-account">
                    <a type="button" id="dropdown-account" class="btn dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-user"></i>{{ customer.first_name }}<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="{{app.url}}/account">My Account</a></li>
                        <li><div class="divider"></div></li>
                        <li><a href="{{app.url}}/account/orders">Orders</a></li>
                        <li><a href="{{app.url}}/account/wishlists">Wishlists</a></li>
                        <li><a href="{{app.url}}/account/registries">Registries</a></li>
                        <li><div class="divider"></div></li>
                        <li><a href="{{app.url}}/account/logout">Not {{ customer.first_name}}? Logout</a></li>
                    </ul>
                </div>
            </li>
            {% endif %}
            {# End my account button #}
            {# Begin cart section #}
            <li class="cart" data-content="" data-placement='bottom' rel='popover'>
                {# Begin ajax cart popover #}
                <div class="ajaxcart" style="display:none">
                    <div class="popover-close">
                        <div class="row">
                            <div class="col-md-7">
                                Quickcart
                            </div>
                            <div class="col-md-5">
                                <a onclick="$('li.cart').popover('hide')" id="ajaxcart-close" class="btn btn-danger btn-sm pull-right fa fa-times"></a>
                            </div>
                        </div>
                    </div>
                    <div class="row error">
                    </div>
                    {# Begin Popover products #}
                    <section class="ajaxcart-products">
                        {# Begin product #}
                        <div class="ajaxcart-product product">
                            <div class="row">
                                <div class="col-xs-4">
                                    <div class="thumbnail">
                                        <img onerror="this.src='{{ app.url_asset }}/assets/images/product/image-250x250.jpg'" class="product-image" src="">
                                    </div>
                                </div>
                                <div class="col-xs-8">
                                    <div class="name">
                                        <span class="product-name"></span>
                                    </div>
                                    <div class="price"><strong>Price:</strong> $<span class="product-price"></span></div>
                                    <div class="quantity"><strong>Qty:</strong> <span class="product-quantity"></span></div>
                                </div>
                            </div>
                        </div>
                        {# Begin product #}
                    </section>
                    {# End Popover products #}
                    {# Begin popover cart totals #}
                    <div class="row">
                        <div class="col-xs-8 col-xs-offset-4">
                            <div class="cart-totals">
                                <div class="items">Item count: <span class="item-count"></span></div>
                                <div class="total">Subtotal: $<span class="subtotal">0.00</span></div>
                            </div>
                        </div>
                    </div>
                    {# End popover cart totals #}
                    <div class="row">
                        <div class="col-md-12">
                            <a href="{{ app.url }}/cart" class="btn btn-cart btn-block">My Cart</a>
                        </div>
                    </div>
                </div>
                {# End ajax cart popover #}
                {# Begin cart button #}
                <a href="{{app.url}}/cart">
                    <i class="fa fa-shopping-cart"></i>
                    <div class="text">My Cart</div>
                    <div class="item-count">{{ api.get('/sessioncart').item_count }}</div>
                </a>
                {# End cart button #}
            </li>
            {# End cart section #}
        </ul>
    </div>
</div>
{# End deskop toolbar #}
{# Beging Branding and Search #}
<div class="row" id="branding">
    <div class="col-md-9 hidden-sm hidden-xs">
        <div class="brand">
            {% if app.params.logoimages is not empty %}
                {% set logo_info = app.params.logoimages | first %}
                {% set logo = logo_info.url %}
            {% endif %}
            {% if logo is not empty %}
              <a  href="{{app.url}}/"><img class="img-responsive" src="{{ logo }}"></a>
            {% else %}
                <div id="logo-txt"><a href="{{app.url}}/">{{ app.params.site.title }}</a></div>
            {% endif %}
        </div>
    </div>
    {# Begin search bar #}
    <div class="search col-lg-3 col-md-3 hidden-sm hidden-xs">
         <form role="search" method="get" action="{{app.url}}/search">
            <div class="input-group twitter-typeahead">
                <input class="form-control input-md typeahead search-autocomplete" data-provide="typeahead" autocomplete="off" type="text" name="s" placeholder="Enter search terms">
                <span class="input-group-btn">
                    <button class="btn" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
    </div>
    {# End search bar #}
</div>
{# End Branding end Search #}
