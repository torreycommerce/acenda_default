{% extends "/_layouts/base.html.twig" %}
{% import "/_macros/form-elements-bootstrap.html.twig" as forms %}
{% import "/_macros/list.html.twig" as list %}
{% import "/account/_macros/base.html.twig" as account %}

{# Redirect to the login page if user is not logged in. #}
{% do account.login() %}

{% block title %}Account{% endblock %}

{# Load in the breadcrumbs positioned in /_layouts/main/base.html.twig #}
{% block breadcrumb %}
{#
Passed into the macro is a array of key:value pairs as (title):(relative url)
- The last link should not have a url, as it will be used as a 'you are here' 
#}
{{ base.breadcrumbs({'Account Center':''}) }}
{% endblock %}

{# Load in the main content positioned in /_layouts/main/base.html.twig #}
{% block content %}
{# 
Load in the tabs for the page, pass in the name of this page, and make sure it's
set in the array in /account/_macros/base.html.twig
#}

{# Begin navigation #}

{{account.navigation()}}

{# End navigation #}
{# Begin account center #}

{# Begin page header #}

<h1><span>Hi, {{ app.user.first_name|title }}!</span></h1>
<p>Welcome to your account center.</p>

{# End page header #}            
{# Begin notifications #}

<div class="card">
	{% set notifications = api.get('/customernotification',{query: {customer_id: app.user.id, date_viewed: {'$exists': false}}, sort: 'date_created:-1','attributes': ['unread','subject','date_created'],'limit':3}) %}
	<div class="card-body">
	    <h2>Notifications</h2>
		{% if notifications is empty %}
		<p>You do not have any notifications.</p>
		{% else %}
		<div class="table-responsive g">
			<table class="table fsd1 table-hover table-striped tablesorter">
				<tbody>
					{% for notif in notifications %}
						<tr style="cursor:pointer" onclick="window.location='{{ app.url }}/account/notification/{{ notif.id }}'">                                                            
							<td>{% if notif.unread %}<i class="fa fa-check"></i>{% endif %}</td>
							<td>{{ notif.subject}}</td>
							<!-- March 30th 9:06pm -->
							<td class="text-right"><span data-original-title="{{ notif.date_created|date('F jS h:i a')}}" data-toggle="tooltip" data-tooltip="">{{ notif.date_created|date("m/d/Y") }}</span></td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<a href="{{app.url}}/account/notifications" class="btn btn-default btn-xs-block float-right">View All Notifications</a>
		{% endif %}
	</div>
</div>

{# End notifications #}
{# Begin recent orders #}

<div class="card">
	{% set orders = api.get('/order', {query:{customer_id:app.user.id},sort:'id:-1',limit:3}) %}
	<div class="card-body">
	    <h2>Recent Orders</h2>
		{% if orders is empty %}
		<p>You have yet to place an order.</p>
		{% else %}
		{% for order in orders %}
		<div class="order fsd1 divide mb-3">
			<div class="row">
				<div class="order-details col-md-5 mb-3">
					<div class="order-info">                    
						<div class="order-id"><b>Order:</b> #{{ order.order_number }}</div>
						<div class="order-date"><b>Ordered:</b> {{ order.date_created}}</div>
						<div class="order-status mt-3"><b>Status:</b> {{order.status}}</div>
					</div>
				</div>
				<div class="order-items col-md-4 mb-3">
					{% set items = api.get('/orderitem', {query:{order_id:order.id}}) %}
					{% for item in items %}
					<div class="item">{{ item.name }}</div>
					{% endfor %}
				</div>
				<div class="actions col-md-3 text-right mb-3">                                        
					<a href="{{app.url}}/account/order/{{ order.order_number }}" class="btn btn-default btn-xs-block float-right">Order Details</a>
				</div>
			</div>
		</div>
		{% endfor %}
		<a class="btn btn-default btn-xs-block float-right" href="{{ app.url }}/account/orders">View All Orders</a>
		{% endif %}
	</div>
</div>

{# End recent orders #}
{# Begin recent favorites #}

<div class="card">
	{% set wishlists = api.get('/wishlist',{query:{"customer_id":app.user.id}}) %}
	{% set _in = [] %}
	{% for wishlist in wishlists %} {% set _in = _in|merge([wishlist.id]) %} {% endfor %}
	{% set items = api.get('/wishlistitem', {query:{'wishlist_id': {'$in': _in}},
		attributes:'variant.name,variant.id,variant.product.slug,,variant.thumbnail',
		sort: 'date_created:-1', limit:3}) %}
	
	
	<div class="card-body">
        <h2>Recent Wish List Items</h2>
		{% if items is empty %}
		<p>You have yet to add items to a Wish List.</p>
		{% else %}
		
		{% for item in items %}
			<div class="pb-3 divide mb-3 fsd1">
			<div class="media media-cart">
				<div class="media-left">
					<img class="media-object" src="{{ item.variant.thumbnail}}" id="product-image-{{ item.variant.id }}" width="250" height="250" alt="">
				</div>
				<div class="media-body g">
					<div class="product-name"><a href="{{app.url}}/product/{{ item.variant.product.slug }}?variant={{item.variant.id}}">{{ item.variant.name }}</a></div>
					
					<div class="pricing mb-3">
						<div class="price">
							{{ prod.currency(product.price|number_format(2)) }}
						</div>
					</div>
					{% set it = api.get('/wishlistitem', {query:{'product_id': variant.product.id}})[0] %}
					{% set wi = api.get('/wishlist',{query:{"customer_id":app.user.id, "id": it.wishlist_id}})[0] %}
					<a href="{{ app.url }}/account/wishlist/{{ wi.id }}"><i><u>{{ wi.name }}</u></i></a>
				</div>
			</div>
			</div>
		{% endfor %}
		<a href="{{ app.url }}/account/wishlists" class="btn btn-default btn-xs-block float-right">View All Wish Lists</a>
		{% endif %}
	</div>
</div>

{# End account center #}
{{account.navigatend()}}
{% endblock %}