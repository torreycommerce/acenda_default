{% extends "/_layouts/base.html.twig" %}
{% import "/_macros/form-elements-bootstrap.html.twig" as forms %}
{% block title %}
Order Status &amp; History
{% endblock %}
{% block breadcrumb %}
    {{ base.breadcrumbs({'Order Status &amp; History':''}) }}
{% endblock %}
{% block content %}
<section id="order_search">
    <div class="row">
        <div class="col-md-12">
            <header>
                <h1 class="page-header"><i class="fa fa-history"></i> Order Status &amp; History</h1>
            </header>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="well">
                 <div>
                    <p>To view your current and past orders, please either <strong><a href="{{app.url}}/account/login/">login to your account</a></strong> or enter your information below.</p>
                    <hr>
                </div>
                {{ forms.begin('order','','post',{ class:'form-horizontal' }) }}
                <div class="form-group">
                    <label class="control-label col-sm-3" for="input2">Email
                        <span class="text-danger">*</span>
                    </label>
                    <div class="col-sm-9">
                        {{ forms.email('order[email]', '', {class:'form-control parsley-validated', required:true, placeholder: "Email"}) }}
                    </div>
                    <div class="col-sm-9 col-sm-offset-3">
                        <div class="validation">{{ forms.errorlist(form_errors, 'email') }}</div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="input2">Order Number
                        <span class="text-danger">*</span>
                    </label>
                    <div class="col-sm-9">
                        {{ forms.number('order[number]', '', {class:'form-control parsley-validated', required:true, placeholder: "Order Number"}) }}
                    </div>
                    <div class="col-sm-9 col-sm-offset-3">
                        <div class="validation">{{ forms.errorlist(form_errors, 'id') }}</div>
                    </div>
                </div>
                <div class="actions">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3">
                            {{ forms.submit('action', 'search', 'Submit', {class:'btn btn-primary'})}}
                        </div>
                    </div>
                </div>
                {{ forms.end() }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
