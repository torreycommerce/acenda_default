{% if app.request.post.createreturn is not empty %}
    {% set quantity = app.request.post.createreturn.quantity %}
    {% set reason = app.request.post.createreturn.reason %}
    {% set results = [] %}
    {% for key, value in quantity %}
        {% if quantity[key] > 0 %}
            {% set result = api.post('/orderreturn?order_number=' ~ app.request.post.createreturn.order_number ~ '&email=' ~ app.request.post.createreturn.email, {order_id:order.id, item_id:key, customer_id:app.user.id, quantity:quantity[key], reason:reason[key], status:'pending'}) %}
            {% set results = results|merge([result]) %}
        {% endif %}
    {% endfor %}
    {% if results is not empty %}
        {% do app.redirect('/account/return/success?ids=' ~ results|join(',') ~ "&email=" ~ app.request.post.createreturn.email ~ "&order_number=" ~ app.request.post.createreturn.order_number) %}
    {% else %}
        {% set form_error = api.error %}
    {% endif %}
{% endif %}
<div id="return-create">
    <div class="row">
        {# Begin returns #}
        <div class="col-sm-12">
            <div class="row">
                <div class="col-md-12">
                    <header>
                        <h3 class="page-header"><i class="fa fa-reply"></i> Create a Return</h3>
                    </header>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">Return items for <strong>Order #{{ order.order_number }}</strong></div>
                <div class="col-md-12">
                    <hr>
                </div>
            </div>
                {% set where = app.user.email is empty ? "" : "/account" %}
                {{ forms.begin('createreturn', app.url ~ where ~'/return/create/' ~ order.order_number, 'post', {class:''}) }}
                {% set global_available = order.returnable_items %}
                {{ forms.hidden('createreturn[email]', order.email) }}
                {{ forms.hidden('createreturn[order_number]', order.order_number) }}
                {% set product_ids = orderitems|values_in('product_id') %}
                {% set products = api.get('/variant',{query:{id:{'$in':product_ids}}})|group_by('id') %}
                {% set ret = 0 %}
                {% for item in orderitems %}
                    {% set q = item.fulfilled_quantity %}
                    {% for r in returns %}
                        {% if item.id == r.item_id %} {% set q = q - r.quantity %} {% endif %}
                    {% endfor %}
                    {% if products[item.product_id][0].inventory_returnable == "1" and q > 0 %}
                        {% set ret = ret + 1 %}
                        {% set available = q %}
                        <div class="row">
                            {# Begin item thumbnail #}
                            <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                                <img onerror="this.src='{{ app.url_asset }}/assets/images/product/image-250x250.jpg'" class="img-thumbnail" src="{{ products[item.product_id][0].thumbnail }}">
                            </div>
                            {# End item thumbnail #}
                            {# Begin item details #}
                            <div class="col-xs-8 col-sm-8 col-md-4 col-lg-5">
                                <a href="{{ app.url ~ products[item.product_id][0].url }}">{{ item.name }}</a>
                                <p class="help-block">{{ available }} available for return</p>
                            </div>
                            {# End item detials #}
                            {# Begin return form #}
                            {% if available > 0 %}
                            <div class="col-xs-8 col-sm-8 col-md-6 col-lg-5">
                                <fieldset>
                                    <div class="row">
                                        {# Begin return quantity #}
                                        <div class="col-md-4 col-lg-4">
                                            <div class="form-group">
                                                <div class="row">
                                                    <label class="control-label col-md-12 col-lg-12" for="input2">Qty
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-md-12 col-lg-12">
                                                        <div class="quantity">
                                                            {{ forms.select('createreturn[quantity][' ~ item.id ~ ']', '0', range(0,available), {class:'form-control parsley-validated',label:'Quantity', required:true, 'parsley-min':0,'parsley-max':available}) }}
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 col-lg-12">
                                                        <div class="validation">{{ forms.errorlist(form_errors, 'quantity[' ~ item.id ~ ']') }}</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        {# End return quantity #}
                                        {# Begin return reason #}
                                        <div class="col-md-8 col-lg-8">
                                            <div class="form-group">
                                                <div class="row">
                                                    <label class="control-label col-md-12 col-lg-12" for="input2">Reason
                                                    </label>
                                                    <div class="col-md-12 col-lg-12">
                                                        {{ forms.select('createreturn[reason][' ~ item.id ~ ']', '', {'': 'Please select',
                                                        'Decided to buy elsewhere' : 'Decided to buy elsewhere',
                                                        'Chose a newer product' : 'Chose a newer product',
                                                        'Thought the delivery time was too long' : 'Thought the delivery time was too long',
                                                        'Did not like the price' : 'Did not like the price',
                                                        'Made a mistake' : 'Made a mistake',
                                                        'Changed my mind' : 'Changed my mind',
                                                        'Product is defective' : 'Product is defective',
                                                        'Product damaged during shipment' : 'Product damaged during shipment',
                                                        'Received incorrect product' : 'Received incorrect product',
                                                        'Product is missing parts/accessories' : 'Product is missing parts/accessories'}, {class:'form-control parsley-validated'}) }}
                                                    </div>
                                                    <div class="col-md-12 col-lg-12">
                                                        <div class="validation">{{ forms.errorlist(form_errors, 'reason[' ~ item.id ~ ']') }}</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        {# End return quantity #}
                                    </div>
                                </fieldset>
                            </div>
                            {# end return form #}
                            {% endif %}
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <hr>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
                {% if ret == 0 %}
                    <div class="row">
                        <div class="col-md-12">
                            <i>No item available for return.</i>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <hr>
                        </div>
                    </div>
                {% endif %}
                <div class="row">
                    <div class="col-md-12">
                        {% if global_available > 0 %}
                        {{ forms.submit('createreturn[action]','submit','Create',{class:'btn btn-primary pull-right'}) }}
                        {% else %}
                        <a class="btn btn-default pull-left" href="javascript:history.go(-1)">Back</a>
                        {% endif %}
                    </div>
                </div>

                {{ forms.end() }}
        </div>
    </div>
</div>
