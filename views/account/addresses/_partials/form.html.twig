<div class="card"><div class="card-body">
	{{ forms.begin('address','','post',{ class:'form-region-customer' }) }}
		<fieldset>
			<legend>Address Information</legend>
			<div id="custom-address">
				<div class="row">
					<div class="col-6">
						<div class="form-group fgq">
							<label class="control-label" for="first-name">First Name</label>
							{{ forms.text('address[first_name]', address.first_name, {class:'form-control parsley-validated', placeholder:"First Name", id:"first-name", required:true}) }}
							<div class="validation">{{ forms.errorlist(form_errors, 'first_name') }}</div>
						</div>
					</div>
					<div class="col-6">
						<div class="form-group fgq">
							<label class="control-label" for="last-name">Last Name</label>
							{{ forms.text('address[last_name]', address.last_name, {class:'form-control parsley-validated', placeholder:"Last Name", id:"last-name", required:true}) }}
							<div class="validation">{{ forms.errorlist(form_errors, 'last_name') }}</div>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label" for="company">Company</label>
					{{ forms.text('address[company]', address.company, {class:'form-control parsley-validated', placeholder:"Company", id:"company"}) }}
					<div class="validation">{{ forms.errorlist(form_errors, 'company') }}</div>
				</div>
				<div class="row">
					<div class="col-6">
						<div class="form-group fgq normalizable">
							<label class="control-label" for="country">Country</label>
							{{ forms.select('address[country]', address.country, {}, {required:true, class:'form-control parsley-validated', id:'country'}) }}
							{{ forms.hidden('address[country_select]', address.country) }}
							<div class="validation">{{ forms.errorlist(form_errors, 'country') }}</div>
						</div>
					</div>
				</div>
				<div class="form-group fgq normalizable">
					<label class="control-label" for="address-1">Address Line 1</label>
					{{ forms.text('address[street_line1]', address.street_line1, {class:'form-control parsley-validated', placeholder:"Address Line 1", id:"address-1", required:true}) }}
					<div class="validation">{{ forms.errorlist(form_errors, 'street_line1') }}</div>
				</div>
				<div class="form-group normalizable">
					<label class="control-label" for="address-2">Address Line 2</label>
					{{ forms.text('address[street_line2]', address.street_line2, {class:'form-control parsley-validated', placeholder:"Address Line 2", id:"address-2"}) }}
					<div class="validation">{{ forms.errorlist(form_errors, 'street_line2') }}</div>
				</div>
				<div class="row">
					<div class="col-6">
						<div class="form-group fgq normalizable">
							<label class="control-label" for="city">City</label>
							{{ forms.text('address[city]', address.city, {class:'form-control parsley-validated', placeholder:"City", id:"city", required:true}) }}
							<div class="validation">{{ forms.errorlist(form_errors, 'city') }}</div>
						</div>
					</div>
					<div class="col-6">
						<div class="form-group fgq normalizable">
							<label class="control-label" id="state-label" for="state">State/Province</label>
                            {{ forms.select('address[state]', address.state, {}, {required:true, class:'form-control parsley-validated', id:'state_select' }) }}
                            {{ forms.text('address[state]', address.state, {class:'form-control parsley-validated hidden', placeholder:"State/Province", id:'state_input'}) }}
							{{ forms.hidden('address[state_select]', address.state) }}
							<div class="validation">{{ forms.errorlist(form_errors, 'state') }}</div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-6">
						<div class="form-group fgq normalizable">
							<label class="control-label" for="zip" id="zip-label"><span class="postziplang">Zip Code</span></label>
							{{ forms.text('address[zip]', address.zip, {class:'form-control parsley-validated', placeholder:"Zip Code", id:"zip", required:true}) }}
							{{ forms.text('address[zip]', address.zip, {class:'form-control parsley-validated hidden', placeholder:"Postal Code", id:"postal"}) }}
							<div class="validation">{{ forms.errorlist(form_errors, 'zip') }}</div>
						</div>
					</div>
					<div class="col-6">
						<div class="form-group fgq">
							<label class="control-label" for="phone">Phone Number</label>
							{{ forms.text('address[phone_number]', address.phone_number, {class:'form-control parsley-validated', id:"phone", placeholder:"Phone Number", required:true}) }}
							<div class="validation">{{ forms.errorlist(form_errors, 'phone_number') }}</div>
						</div>
					</div>
				</div>
			</div>
			<div class="form-group form-check">
				{{ forms.checkbox('address[make_default]', 1) }}
				<label class="form-check-label" for="address[make_default]">Make this your default address</label>
			</div>
			{{ normalizer.normalizer() }}
			<div class="form-group actions">
				{% if create %}
				{{ forms.submit('address[action]', 'create', 'Create', {class:'btn btn-lg btn-primary'})}}
				{% else %}
				{{ forms.submit('address[action]', 'save', 'Save', {class:'btn btn-lg btn-primary'})}}
				{% endif %}
			</div>
		</fieldset>
	{{ form.end() }}
</div></div>
