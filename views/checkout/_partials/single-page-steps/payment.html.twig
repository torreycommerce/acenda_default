<h3>Credit Card</h3>

<form id="payment-form"  novalidate parsley-validate>

<div class="row">
	<div class="col-xs-6 col-md-7">
		<div class="form-group fgq">
			<label class="control-label" for="checkout_card_number">Card Number</label>
			{{ forms.text('card_number', checkout.card_number, {id:'checkout_card_number',class:'form-control parsley-validated', placeholder:"Card Number", required:true, 'parsley-luhn': true, 'parsley-type': 'number'}) }}
			<div class="validation">{{ forms.errorlist(form_errors, 'card_number') }}</div>
		</div>
	</div>
	<div class="col-xs-6 col-md-5">
		<div style="margin: auto;" class="form-group" id="checkout-cards">
			<label>&nbsp;</label>
			<div class="row row-thin">
				<div class="col-xs-3 col-thin">
					<div class="checkout-card">
						<div class="image-space is60 checkout-card">
							<img src="{{app.url_asset}}/assets/images/creditcards/visa.png" class="img-responsive isd cc-visa" width="73" height="44" alt="">
						</div>
					</div>
				</div>
				<div class="col-xs-3 col-thin">
					<div class="checkout-card">
						<div class="image-space is60 checkout-card">
							<img src="{{app.url_asset}}/assets/images/creditcards/mastercard.png" class="img-responsive isd cc-mastercard" width="73" height="44" alt="">
						</div>
					</div>
				</div>
				<div class="col-xs-3 col-thin">
					<div class="checkout-card">
						<div class="image-space is60 checkout-card">
							<img src="{{app.url_asset}}/assets/images/creditcards/amex.png" class="img-responsive isd cc-amex" width="73" height="44" alt="">
						</div>
					</div>
				</div>
				<div class="col-xs-3 col-thin">
					<div class="checkout-card">
						<div class="image-space is60 checkout-card">
							<img src="{{app.url_asset}}/assets/images/creditcards/discover.png" class="img-responsive isd cc-discover" width="73" height="44" alt="">
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-xs-4">
		<div class="form-group fgq">
			<label class="control-label" for="ccv">CVV2</label>
			{{ forms.text('card_cvv2', checkout.card_cvv2, {class:'form-control parsley-validated', id:'ccv', placeholder:"CVV2", required:true, 'pattern':'^[0-9]{3,4}$'}) }}
			<div class="validation">{{ forms.errorlist(form_errors, 'card_cvv2') }}</div>
		</div>
	</div>
	<div class="col-xs-4">
		<div class="form-group fgq">
			<label class="control-label" for="exp-m">Exp Month</label>
			{% set months = {} %}
			{% for i in range(1,12) %}
				{% set month = "%02d"|format(i) %}
				{% set months = months + {(month):month} %}
			{% endfor %}
			{{ forms.select('card_exp_month', checkout.card_exp_month, months, {class:'form-control parsley-validated', id:'exp-m'}) }}
			<div class="validation">{{ forms.errorlist(form_errors, 'card_exp_month') }}</div>
		</div>
	</div>
	<div class="col-xs-4">
		<div class="form-group fgq">
			<label class="control-label" for="exp-y">Exp Year</label>
			{% set years = {} %}
			{% for i in range(now|date('Y'),now|date('Y')+15) %}
				{% set years = years + {(i):i} %}
			{% endfor %}
			{{ forms.select('card_exp_year', checkout.card_exp_year, years, {class:'form-control parsley-validated', id:'exp-y'}) }}
			<div class="validation">{{ forms.errorlist(form_errors, 'card_exp_year') }}</div>
		</div>
	</div>
</div>

<div id="billing-address" style="display:block">
<h3>Billing Address</h3>
	<div id="customer-addresses" style="display: none;" class="row">
		<div class="col-xs-12">
			<div class="form-group">
	             <label class="control-label" for="first-name">Select an Address</label>			
				<select class="form-control" id="billing-customer-addresses-select">
				</select>
	            <div class="validation"></div>			
			</div>
		</div>
	</div>
	<div  id="billing-address-form">
		<div class="hide-billing">
			<div class="row">
				<div class="col-xs-6">
					<div class="form-group fgq">
						<label class="control-label" for="first-name">First Name</label>
						{{ forms.text('billing_first_name', '', {class:'form-control parsley-validated', id:'first-name', placeholder:"First Name", required:true}) }}
						<div class="validation">{{ forms.errorlist(form_errors, name ~ 'first_name') }}</div>
					</div>
				</div>
				<div class="col-xs-6">
					<div class="form-group fgq">
						<label class="control-label" for="last-name">Last Name</label>
						{{ forms.text('billing_last_name', '', {class:'form-control parsley-validated', id:'last-name', placeholder:"Last Name", required:true}) }}
						<div class="validation">{{ forms.errorlist(form_errors, name ~ 'last_name') }}</div>
					</div>
				</div>
			</div>
	     	<fieldset class="verify-change-billing">

			<div class="form-group fgq normalizable">
				<label class="control-label" for="addr-1">Address 1</label>
				{{ forms.text('billing_street_line1', '', {class:'form-control parsley-validated', id:'addr-1', placeholder:"Address 1", required:true}) }}
				<div class="validation">{{ forms.errorlist(form_errors, name ~ 'street_line1') }}</div>
			</div>
			<div class="form-group normalizable">
				<label class="control-label" for="addr-2">Address 2</label>
				{{ forms.text( 'billing_street_line2', '', {class:'form-control parsley-validated', id:'addr-2', placeholder:"Address 2"}) }}
				<div class="validation">{{ forms.errorlist(form_errors, name ~ 'street_line2') }}</div>
			</div>
			<div class="row">
				<div class="col-xs-12 col-sm-6">
					<div class="form-group fgq normalizable">
						<label class="control-label" for="country">Country</label>
						{{ forms.select('billing_country', '', {}, {class:'form-control parsley-validated', id:'billing-country'}) }}
						<div class="validation">{{ forms.errorlist(form_errors, name ~ 'country') }}</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-6">
					<div class="form-group fgq normalizable">
						<label class="control-label" for="city">City</label>
						{{ forms.text('billing_city','', {class:'form-control parsley-validated', id:'city', placeholder:"City", required:true}) }}
						<div class="validation">{{ forms.errorlist(form_errors, name ~ 'city') }}</div>
					</div>
				</div>
				<div class="col-xs-6">
					<div class="form-group fgq normalizable">
						<label class="control-label" id="state-label" for="state">State</label>
		                {{ forms.select('billing_state', '', {}, {class:'form-control parsley-validated', placeholder:"State", id:'billing-state'}) }}
		                <div class="validation">{{ forms.errorlist(form_errors, name ~ 'state') }}</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-6">
					<div class="form-group fgq normalizable">
						<label class="control-label" for="zip"><span class="postziplang">Zip Code</span></label>
						{{ forms.text('billing_zip', '', {class:'form-control parsley-validated', id:'zip', placeholder:"Zip Code", required:true}) }}
						<div class="validation">{{ forms.errorlist(form_errors, name ~ 'zip') }}</div>
					</div>
				</div>
				<div class="col-xs-6">
					<div class="form-group fgq">
						<label class="control-label" for="phone">Phone Number</label>
						{{ forms.text('billing_phone_number', '', {class:'form-control parsley-validated', id:'phone', placeholder:"Phone Number", required: true}) }}
						<div class="validation">{{ forms.errorlist(form_errors, name ~ 'phone_number') }}</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12">	

				</div>							
			</div>
		  </fieldset>
	    </div>
	</div>	
</div>
<div class="row">
	<div class="col-xs-12">
		<div class="form-group">
				<div class="checkbox">
				  <label><input type="checkbox" name="copy_shipping_to_billing" value="">Billing Address is the same as the Shipping Address</label>
				</div>
		</div>
	</div>
</div>
<div id="address-verify">

</div>
</form>
<div class="row">
	<div class="col-md-12">
		 <button id="btn-continue-payment" class="btn btn-primary  pull-right">Continue</button>
	</div>
</div>

