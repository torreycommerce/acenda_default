<div class="row">
	<div class="col-md-6" style="border-right: 0px solid black; min-height: 250px;"> 
		<h3>Guest Checkout</h3>
		<div style="font-size: 14px; margin-bottom: 20px"> Welcome! An email address is required for order tracking. Please click below if you would like to also create an account.</div>
		<form id="guest-form"  parsley-validate>
		  <div class="form-group fgq">
		    <label for="exampleInputEmail1">Email address</label>
		    <input type="email" class="form-control parsley-validated" name="email" value="{{ app.user.getState('email') }}"placeholder="Email" required>
		  </div>
		  <button id="btn-continue-signin" style="position: absolute; bottom: 0px; right: 15px" class="btn btn-primary pull-right">Continue</button>
		</form>

	</div>
	<div class="col-md-6" style="min-height: 250px;"> 
		<h3>Returning Customer</h3>
		<div style="font-size: 14px; margin-bottom: 20px">Welcome back!<br/> Simply sign in and let's get started.</div>		
		<form id="login-form">
		  <div class="form-group fgq">
		    <label for="exampleInputEmail1">Email address</label>
		    <input type="email" class="form-control" name="email" placeholder="Email">
		  </div>
		  <div class="form-group fgq">
		    <label for="exampleInputPassword1">Password</label>
		    <input type="password" class="form-control" name="password" placeholder="Password">
		  </div>
		  <div id="signin-error"></div>  
		  <button id="btn-login-signin" style="position: absolute; bottom: 0px; right: 15px"  class="btn btn-primary ">Sign In</button>
		</form>

	</div>

</div>