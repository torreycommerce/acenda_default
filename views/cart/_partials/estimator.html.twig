
<div class="card-header">
<h2>Shipping and Tax</h2>
</div>
<div class="card-body">

<div id="estimator-error"></div>

{{ forms.begin('cart','','post',{ class:'form-estimate needs-validation' }) }}
	<div class="row">
	  <div class="col-md-4">	
		<div class="form-group">
			<div class="row">
				<div class="col-md-12">

				    <label class="sr-only" for="cart_zip_code">Shipping Zip Code</label>
					{{ forms.hidden('cart[shipping_country]', 'US') }}			    
					{{ forms.text('cart[shipping_zip]', cart.shipping_zip, {style: 'vertical-align: middle;  display:inline-block; width: 6em', placeholder: "Zip Code", class:'form-control', id:'cart_zip_code', 'data-value':cart.shipping_zip, required:true}) }}
					{{ forms.submit('action', 'submit', 'Estimate', { style: 'vertical-align: middle; display: inline-block; width: 6em;' ,class:'btn btn-default btn-block', id: 'cart_Estimate'})}}

				</div>
			</div>
		</div>
      </div>
      <div class="col-md-8" id="shipping-method-selection"> 	

      </div>
	</div>
{{ forms.end() }}
</div>
<script id="shipping-methods-template" type="text/template">
    <div class="table-responsive fsd1">
	<table  class="table">

	<tbody>
		<% _.each(methods,function(method) { %>
			<% if(method.status=='active') { %>
			    <tr method="<%= method.id %>">
			        <td><div class="custom-control custom-radio"><input <%= (method.id == current_method)?'checked':''  %> type="radio" class="custom-control-input" id="method_<%= method.id %>_input" name="shipping_method" value="<%= method.id %>" carrier="<%= method.carrier_name %>" ><label class="custom-control-label " for="method_<%= method.id %>_input"><%= method.name %></label></div></td>
			        <td class="estimate-column" style="text-align: center; padding-left:2; padding-right:2"><label style=" white-space: nowrap; "for="method_<%= method.id %>_input" class="<%= method.carrier_method %>"><% if(method.bottom_days_range && method.top_days_range) { %><%= method.bottom_days_range %> - <%= method.top_days_range %> days <% } %> </label><i id="spinner" class="fa fa-circle-notch fa-spin" style="display:none;"></i></td>
			        <td class="text-right"  style="text-align: left; padding-left:2; padding-right:2"><label for="method_<%= method.id %>_input">$<%= method.price %></label></td>
			    </tr>
			    <% } %>
	    <% }) %>
	</tbody>
	</table>
	</div>
</script>
