        <hr class="divide"/>
		<div class="col-xs-12 col-md-8">
			<div class="row">
				<div class="col-xs-12 col-sm-4">
					<a class="btn btn-block btn-default btn-sec" href="{{ app.url }}/">Continue Shopping</a>
				</div>
			</div>
		</div>
	</div>#}
	{# Begin third party payments #}
	{# End third party payments #}
	{% endif %}
	{% endif %}
	{% endblock %}

