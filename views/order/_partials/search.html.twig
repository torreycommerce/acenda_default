{% extends "/_layouts/base.html.twig" %}
{% import "/_macros/form-elements-bootstrap.html.twig" as forms %}
{% import "/_macros/lonely-form.html.twig" as lonelyform %}
{% block title %}
Order Status &amp; History
{% endblock %}
{% block breadcrumb %}
    {{ base.breadcrumbs({'Order Status &amp; History':''}) }}
{% endblock %}
{% block content %}
<section id="order_search">
<div class="row">
    <div class="col-md-12">
        <header>
            <h1>Order Status &amp; History</h1>
        </header>
    </div>
</div>
{{ lonelyform.begin('contact')}}
    {{ lonelyform.beginintro() }}
        <p>To view your current and past orders, please either <strong><a href="{{app.url}}/account/login/">login to your account</a></strong> or enter your information below.</p>
    {{ lonelyform.endintro() }}
                {{ forms.begin('order','','post') }}
    <div class="form-group">
        <label class="control-label" for="order-email">Email
            <span class="text-danger">*</span>
        </label>
        {{ forms.email('order[email]', '', {class:'form-control parsley-validated', id:'order-email', required:true, placeholder: "Email"}) }}
        <div class="validation">{{ forms.errorlist(form_errors, 'email') }}</div>
    </div>
    <div class="form-group">
        <label class="control-label" for="order-number">Order Number
            <span class="text-danger">*</span>
        </label>
        {{ forms.number('order[number]', '', {class:'form-control parsley-validated', id:'order-number', required:true, placeholder: "Order Number"}) }}
        <div class="validation">{{ forms.errorlist(form_errors, 'id') }}</div>
    </div>
    <div class="actions">     
        {{ forms.submit('action', 'search', 'Submit', {class:'btn btn-lg btn-primary'})}}
    </div>
    {{ forms.end() }}
{{ lonelyform.end() }}
        </div>
    </div>
</section>
{% endblock %}
