{% extends "/_layouts/base.html.twig" %}
{% import "/_macros/form-elements-bootstrap.html.twig" as forms %}
{% import "/_macros/lonely-form.html.twig" as lonelyform %}
{% block title %}Order Status &amp; History{% endblock %}
{% block breadcrumb %}
    {{ base.breadcrumbs({'Order Status &amp; History':''}) }}
{% endblock %}
{% block content %}

{{ lonelyform.begin()}}
<h1>Order Status &amp; History</h1>
{{ lonelyform.begincard() }}
    <p>To view your current and past orders, please either <strong><a href="{{app.url}}/account/login/">log in to your account</a></strong> or enter your information below.</p>
	{{ forms.reqfieldlang() }}
    {{ forms.begin('order','','post') }}<fieldset><legend class="sr-only">Order Status & History</legend>
    <div class="form-group fgq">
        <label for="order-email">Email Address{{forms.fgqtext}}</label>
        {{ forms.email('order[email]', '', {class:'form-control parsley-validated', id:'order-email', required:true, placeholder: "Email Address"}) }}
        <div class="validation">{{ forms.errorlist(form_errors, 'email') }}</div>
    </div>
    <div class="form-group fgq">
        <label for="order-number">Order Number{{forms.fgqtext}}</label>
        {{ forms.number('order[number]', '', {class:'form-control parsley-validated', id:'order-number', required:true, placeholder: "Order Number"}) }}
        <div class="validation">{{ forms.errorlist(form_errors, 'id') }}</div>
    </div>
    <div class="actions">     
        {{ forms.submit('action', 'search', 'Check Status', {class:'btn btn-lg btn-primary btn-block'})}}
    </div>
    </fieldset>{{ forms.end() }}
{{ lonelyform.end() }}
{{ lonelyform.endcard() }}
{% endblock %}