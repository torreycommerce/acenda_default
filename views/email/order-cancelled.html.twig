{% include 'email/core/header.html.twig' %}
{% set order = api.get('/order/' ~ order_id ~ '?email=' ~ email ~ '&order_number=' ~ order_number) %}
{% set items = api.get('/orderitem?email=' ~ email ~ '&order_number=' ~ order_number, {query:{order_id:order_id}}) %}
{% set product_ids = items|values_in('product_id') %}
{% set products = api.get('/product',{query:{id:{'$in':product_ids}}})|group_by('id') %}
{% set shipping_method = api.get('/shippingmethod/' ~ order.shipping_method) %}
<tr>
	<td style="border-bottom:1px solid #e5e5e5;">
		<table border="0" cellspacing="0" cellpadding="0" style="width:100%!important;">
			<tr>
				<td align="center" style="padding:20px; color:#000; font-size:20px; font-weight:bold;">
				Order Cancellation
				</td>
			</tr>
			<tr>
				<td align="center" style="padding:0 20px 20px; color:#333; font-size:14px; line-height:1.6;">
				Your <b>{{ params['site']['title']|default("") }}</b> Order has been cancelled!
				<br><b>Order ID:</b> {{ order.order_number }}
				</td>
			</tr>
	  </table>
	</td>
</tr>
<tr>
	<td style="border-bottom:1px solid #e5e5e5;">
		<table border="0" cellpadding="0" cellspacing="0" style="width:100%!important;">
			<tr>
				<td style="width:50%; padding:20px 10px 20px 20px; color:#000; font-size:16px;">
					Order Details
				</td>
				<td style="width:50%; padding:20px 20px 20px 10px; color:#000; font-size:16px;">
					Shipping Info
				</td>
			</tr>
			<tr>
				<td valign="top" style="width:50%; padding:0 10px 20px 20px; color:#333; font-size:14px; line-height:1.6;">
					<b>Order ID:</b> {{ order.order_number }}
					<br><b>Date:</b> {{ order.date_created }}
					<br><br><b>Subtotal:</b> ${{ order.item_subtotal|number_format(2) }}
                    <br><b>Shipping:</b> ${{order.shipping_rate|number_format(2)}}
                    {% if order.discount_price > 0 %}
                        <br><b>Discount:</b> ${{order.discount_price|number_format(2)}}
                    {% endif %}
                    <br><b>Total Before Tax:</b> ${{order.adjusted_subtotal|number_format(2)}}
					<br><b>Tax:</b> ${{order.tax|number_format(2)}}
					<br><b>Total:</b> ${{order.total|number_format(2)}}
				</td>
				<td valign="top" style="width:50%; padding:0 20px 20px 10px; color:#333; font-size:14px; line-height:1.6;">
					{{ order.shipping_first_name }} {{ order.shipping_last_name }}
					{% if order.giftlist_present is empty %}
					<br>{{ order.shipping_street_line1}} {{ order.shipping_street_line2}}
					<br>{{ order.shipping_city }}, {{ order.shipping_state }} {{ order.shipping_zip }}
					<br>{{ order.shipping_phone_number }}
					{% endif %}
				</td>
			</tr>
		</table>
	</td>
</tr>
<tr>
	<td style="border-bottom:1px solid #e5e5e5;">
		<table border="0" cellpadding="0" cellspacing="0" style="width:100%!important;">
			<tr>
				<td align="center" style="padding:20px; color:#000; font-size:16px;">
					Products
				</td>
			</tr>
			{% for item in items %}
			<tr>
				<td style="padding:0 20px 20px; color:#333; font-size:14px; line-height:1.6;">
					<a href="{{ params['url']['current']}}{{products[item.product_id].0.url}}" style="color:#000; text-decoration:none;">{{ item.name }}</a>
					<br><b>SKU:</b> {{item.sku}}
					<br><b>Price:</b> ${{ item.price|number_format(2) }}
					<br><b>Quantity:</b> {{ item.quantity }}
				</td>
			</tr>
			{% endfor %}
		</table>
	</td>
</tr>
{% include 'email/core/top-seller.html.twig' %}
{% include 'email/core/footer.html.twig' %}
