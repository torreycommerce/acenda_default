{% import "/_macros/lonely-form.html.twig" as lonelyform %}
{% set wishlist_items = api.get('/wishlist/' ~ wishlist.id ~ '/items') %}

{% if (wishlist_items is empty) %}

{{ lonelyform.begin()}}
<h1>{{ wishlist.name }}</h1>
{{ lonelyform.begincard()}}
<p>There are no items in this Wish List.</p>
{% if wishlist.customer_id == app.user.id %}
<a class="btn btn-default btn-lg btn-block {#btn-edit editwishlistLink#}" href="{{ app.url }}/account/wishlist/{{ wishlist.id }}/edit">Change Settings</a>
{% endif %}
{{ lonelyform.endcard()}}
{{ lonelyform.end() }}
{% else %}

{{ forms.begin('wishlist-form', app.url ~ '/wishlist/' ~ wishlist.id ~ '/route') }}   
	{% set product_ids = wishlist_items|values_in('variant_id') %}
	{% set variants = api.get('/variant',{ query:{id:{'$in':product_ids}}, attributes:'*,product.*' } )|group_by('id') %}

	{# Remove products that were disabled or removed #}
	{% set items_deleted = false %}
	{% for item in wishlist_items %}
	{% set variant = variants[item.variant_id][0] %}
	{% if variant.status != 'active' %}
	{% do api.delete('/wishlistitem/' ~ item.id) %}
	{% if wishlist.customer_id == app.user.id %}
	{# FIXME: These flash messages don't work sometimes #}
	{% if variant.title is defined %}
	{# This product is disabled or removed #}
	{% do app.user.setFlash(variant.title ~ ' is no longer available.', 'info') %}
	{% else %}
	{# This product doesn't exist anymore (deleted) #}
	{% do app.user.setFlash('A product you have selected is no longer available.', 'info') %}
	{% endif %}
	{% endif %}
	{% set items_deleted = true %}
	{% endif %}
	{% if items_deleted %}
		{% do app.redirect(app.request.url) %}
	{% endif %}
	{% endfor %}
		{% spaceless %}
<h1>{{ wishlist.name }}</h1>
<div class="card"><div class="card-body">
<h2 class="sr-only">Products</h2>
{% for item in wishlist_items %}
	{% set left = item.quantity - item.quantity_purchased < 0 ? 0 : item.quantity - item.quantity_purchased %}
	{% set variant = variants[item.variant_id][0] %}
		{# Begin product #}
	<div class="divide g mb-4 pb-4">
		<div class="row">
			<div class="col-md-6">
		<div class="media media-cart mb-3 mb-md-0">
			<div class="media-left">
				<img class="media-object" src="{{ variant.thumbnail }}" width="250" height="250" alt="">
			</div>

			<div class="media-body g">

				<h3 class="product-name"><a href="{{app.url}}{{ variant.product.slug }}">{{ variant.name }}</a></h3>

				<ul class="list-inline pricing">
					<li class="price">{{ prod.currency(variant.price) }}</li>
					{% if variant.compare_price %}
						<li class="price-regular">{{ prod.currency(variant.compare_price) }}</li>
					{% endif %}
				</ul>
				
				<div class="fsd1 qty-wanted mb-3">
					<div class="{{ left ? "fg-green" : "fg-red" }}">
						{% if left <= 0 %}
							<span class="purchased">This item is purchased</span>
						{% else %}
							Wanted: <b class="qty">{{ left }}</b>
						{% endif %}
					</div>
				</div>
				
				<ul class="list-inline">
				{% if wishlist.customer_id == app.user.id %}
					<li class="qty-update">
						<a href="#" class="btn btn-default btn-xs" data-toggle="modal" data-target="#modal_{{ variant.id }}">Update Qty</a>
					{# Begin quantity modal #}
					<div class="modal fade modal_list_quantity" id="modal_{{ variant.id }}">
						<div class="modal-dialog modal-sm">
							<div class="modal-content">
								<div class="modal-header">
								    <div class="h3 modal-title">Update Item Quantities</div>
									<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
								</div>
								<div class="modal-body">
								    <p>Update quantities for this item?</p>
									<div class="h3">{{ variant.name }}</div>
									<div class="row">
										<div class="col-6">
											<label for="quantity_purchased[{{ item.id }}]">Qty <br>Purchased</label>
											<div class="input-group igq-mod">
    											<div class="mr-1">
                                                    <input class="form-control form-control-lg quantity-selector text-center" id="quantity_purchased[{{ item.id }}]" type="text" value="{{ item.quantity_purchased }}" maxlength="2" placeholder="1" data-id="{{item.id}}" name="quantity_purchased[{{ item.id }}]">
                                                </div>
                                                <div class="btn-group-vertical">
													<button class="btn btn-default btn-xs btn-sq-xs btn-add" type="button"><i class="fa fa-chevron-up"><span class="sr-only">Increase Purchased Qty</span></i></button>
													<button class="btn btn-default btn-xs btn-sq-xs btn-remove" type="button"><i class="fa fa-chevron-down"><span class="sr-only">Decrease Purchased Qty</span></i></button>
												</div>
    										</div>
										</div>
										<div class="col-6">
											<label for="wishlistitem_quantity[{{ item.id }}]">Qty <br>Wanted</label>
											<div class="input-group igq-mod">
												<div class="mr-1">
													<input class="form-control form-control-lg quantity-selector text-center" id="wishlistitem_quantity[{{ item.id }}]" type="text" value="{{ item.quantity }}" maxlength="2" placeholder="1" data-id="{{item.id}}" name="wishlistitem_quantity[{{ item.id }}]">
												</div>
												<div class="btn-group-vertical">
													<button class="btn btn-default btn-xs btn-sq-xs btn-add" type="button"><i class="fa fa-chevron-up"><span class="sr-only">Increase Wanted Qty</span></i></button>
													<button class="btn btn-default btn-xs btn-sq-xs btn-remove" type="button"><i class="fa fa-chevron-down"><span class="sr-only">Decrease Wanted Qty</span></i></button>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="modal-footer">
									<button class="btn btn-primary btn-block" data-dismiss="modal">Save</button>
								</div>
							</div>
						</div>
					</div>
					</li>
				{% endif %}
				{# End quantity modal #}
				{% if wishlist.customer_id == app.user.id %}
					<li class="qty-remove">
						<button class="btn btn-link btn-xs px-0" data-toggle="modal" data-target="#modal_remove_{{ variant.id }}" type="button"><i class="fa fa-times"></i><span>Remove</span></button>
					{# Begin remove modal #}
					<div class="modal fade" id="modal_remove_{{ variant.id }}" tabindex="-1" role="dialog" aria-hidden="true">
						<div class="modal-dialog modal-sm">
							<div class="modal-content">
								<div class="modal-header">
								    <div class="h3 modal-title">Delete this item?</div>
									<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
								</div>
								<div class="modal-body">
									<p>Remove this item from your Wish List?</p>
									<div class="h3">{{ variant.name }}</div>
								</div>
								<div class="modal-footer">
								    <div class="flex-fill">
    									<button class="btn btn-default btn-block" data-dismiss="modal" type="button">Cancel</button>
    									<a href="{{app.url}}/wishlist/item/{{ item.id }}/delete" class="btn btn-danger btn-block">Delete</a>                                                
    								</div>
								</div>
							</div>
						</div>
					</div>
					{# End remove modal #}
					</li>
				{% endif %}
				</ul>

			</div>
		</div>
	</div>

			<div class="col-md-6">
				<div class="form-group">
					<label for="quantity-selector-{{ item.id }}">Qty</label>
					<div class="input-group igq-mod">
						<div class="mr-1">
							<input type="text" value="1" maxlength="2" placeholder="1" class="form-control form-control-lg px-1 quantity-selector text-center" id="quantity-selector-{{ item.id }}" name="add_to_cart[{{ item.id }}]">
						</div>
						<div class="btn-group-vertical mr-3">
                            <button type="button" class="btn btn-default btn-xs btn-sq-xs btn-add"><i class="fa fa-chevron-up"></i></button>
							<button class="btn btn-default btn-xs btn-sq-xs btn-remove" type="button"><i class="fa fa-chevron-down"><span class="sr-only">Decrease Qty</span></i></button>
						</div>
						<button class="btn btn-lg btn-primary btn-cart flex-fill" name="action" value="add/{{ item.id }}">Add to Cart</button>
					</div>
				</div>
			</div>
			</div>
			</div>

{% endfor %}
</div></div>

{% if wishlist.privacy == 'public' or wishlist.privacy == 'unlisted' %}
<div class="dropdown text-right">
	<button class="btn btn-default dropdown-toggle btn-xs-block" type="button" id="dropMana" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span>Manage Wish List</span><i class="fa fa-angle-down"></i></button>
	<div class="dropdown-menu dropdown-menu-right col col-md-auto px-0" aria-labelledby="dropMana">
		<div class="px-4 py-1">
			<label for="shareregi">Share this Wish List:</label>
			<input class="form-control" type="text" onclick="this.select()" value="{{ app.url}}/wishlist/{{wishlist.id}}" readonly="readonly">
		</div>
		<div class="dropdown-divider"></div>
		{% if wishlist.customer_id == app.user.id %}
		<a class="btn dropdown-item" href="{{ app.url }}/account/wishlist/{{ wishlist.id }}/edit">Change Settings</a>
		{% else %}
		<a class="btn dropdown-item disabled" href="#">Change Settings</a>
		{% endif %}
	</div>
</div>
{% endif %}

{% endspaceless %}
{{ forms.end() }}
{% endif %}