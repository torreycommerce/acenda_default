{% extends "/_layouts/base.html.twig" %}
{% import "/_macros/base.html.twig" as base %}
{% import "/_macros/form-elements-bootstrap.html.twig" as forms %}

{% block title %}Create a Return{% endblock %}

{% block breadcrumb %}
{{ base.breadcrumbs({'Create a Return':''}) }}
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <header>
            <h1 class="page-header"><i class="fa fa-reply"></i> Create a Return</h1>
        </header>
    </div>
</div>
{{ forms.begin('guestreturn',app.url ~ '/return/create','post', {class:'form-horizontal'}) }}
<div class="row">
    <div class="col-md-8">
        <div class="well">
            {# Begin #}
                <div>
                    <p>To return an item you've already received, please enter the following details:</p>
                    <hr>
                </div>
            <fieldset>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="input1">Email
                        <span class="text-danger">*</span>
                    </label>
                    <div class="col-sm-9">
                        {{ forms.email('guestreturn[email]', form.email, {placeholder:'Email', class:'form-control parsley-validated', required:true}) }}
                    </div>
                    <div class="col-sm-9 col-sm-offset-3">
                        <div class="validation">{{ forms.errorlist(form_errors, 'email') }}</div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="input1">Order Number
                        <span class="text-danger">*</span>
                    </label>
                    <div class="col-sm-9">
                        {{ forms.text('guestreturn[order_number]', form.order_id, {placeholder:'Order Number', class:'form-control parsley-validated', required:true}) }}
                    </div>
                    <div class="col-sm-9 col-sm-offset-3 ">
                        <div class="validation">{{ forms.errorlist(form_errors, 'order_number') }}</div>
                    </div>
                </div>
            </fieldset>
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    {{ forms.submit('guestreturn[action]', 'create', 'Create', {class:'btn btn-primary'}) }}
                </div>
            </div>
        </div>
    </div>
</div>
{{ forms.end() }}

{% endblock %}
