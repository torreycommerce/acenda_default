{% set registry_items = api.get('/registryitem', {query:{'registry_id': registry.id}}) %}

{% if (registry_items is empty) %}

<h1>{{ registry.name }}</h1>
<div class="card"><div class="card-body">
<p>There are no items in this Registry.</p>
{% if registry.customer_id == app.user.id %}
<a class="btn btn-default btn-lg btn-block {#btn-edit editregistryLink#}" href="{{ app.url }}/account/registry/{{ registry.id }}/edit">Change Settings</a>
{% endif %}
</div></div>
{% else %}

{{ forms.begin('registry-form', app.url ~ '/registry/' ~ registry.id ~ '/route') }}   
{% set variant_ids = registry_items|values_in('variant_id') %}

{#
FIXME the api is currently broken using the below conditions
when the API is fixed, restore this and get rid of the api workaround
#}
{% set variants = api.get('/variant',{ query:{id:{'$in':variant_ids}}, attributes:'*,product.*' } )|group_by('id') %}


{# Remove variants that were disabled or removed #}
{% set items_deleted = false %}
{% for item in registry_items %}
    
    {% set variant = variants[item.variant_id][0] %}
    
    {#% if variant.status != 'active' %#}
    {% if false %}
        {% do api.delete('/registryitem/' ~ item.id) %}
        {% if registry.customer_id == app.user.id %}
            {# FIXME: These flash messages don't work sometimes #}
            {% if variant.title is defined %}
                {# This variant is disabled or removed #}
                {% do app.user.setFlash(variant.title ~ ' is no longer available.', 'info') %}
            {% else %}
                {# This variant doesn't exist anymore (deleted) #}
                {% do app.user.setFlash('A product you have selected is no longer available.', 'info') %}
            {% endif %}
        {% endif %}
        {% set items_deleted = true %}
    {% endif %}
    {% if items_deleted %}
        {% do app.redirect(app.request.url) %}
    {% endif %}
{% endfor %}
{% spaceless %}

<h1>{{ registry.name }}</h1>
<div class="card"><div class="card-body">
<h2 class="sr-only">Products</h2>
{% for item in registry_items %}
    {% set priceclass = "" %}
    {% set usespecial = 0 %}
    {% set left = item.quantity - item.quantity_purchased < 0 ? 0 : item.quantity - item.quantity_purchased %}
    
    {% set variant = variants[item.variant_id][0] %}
    
<div class="divide g mb-4 pb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="media media-cart mb-3 mb-md-0">
                <div class="media-left">
					<div class="image-space image-space-product">
						<img class="img-fluid img-product isd" src="{{ variant.thumbnail }}" width="{{imgThumbnailWidth}}" height="{{imgThumbnailHeight}}" alt="">
					</div>
                </div>
                <div class="media-body g">
                    <a href="{{app.url}}/product/{{ variant.product.slug }}?variant={{variant.id}}"><h3 class="product-name">{{ variant.name }}</h3></a>
                    {% if variant.regular_price is not empty %}
                        {% set shownprice = variant.regular_price %}
                        {% set priceclass = " price-special" %}
                        {% set usespecial = 1 %}
                    {% else %}
                        {% set shownprice = variant.price %}
                    {% endif %}
                    <div class="pricing mb-3">
                        <div class="price{{priceclass}}">{{ prod.currency(shownprice) }}{% if usespecial %}<span class="special bg-danger text-white">Lower Price in Cart</span>{% endif %}</div>
                    </div>

                    <div class="fsd1 qty-wanted mb-3">
                        <div class="{{ left ? "fg-green" : "fg-red" }}">
                            {% if left <= 0 %}
                                <span class="purchased">This item is purchased</span>
                            {% else %}
                                Wanted: <strong class="qty">{{ left }}</strong>
                            {% endif %}
                        </div>
                    </div>

                    <ul class="list-inline mb-0">
                        {% if registry.customer_id == app.user.id %}
                        <li class="qty-update">
                            <a href="#" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal_{{ variant.id }}">Update Qty</a>
                            <div class="modal fade modal_list_quantity" id="modal_{{ variant.id }}">
                                <div class="modal-dialog modal-sm">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <div class="h3 modal-title">Update Item Quantities</div>
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Update quantities for this item?</p>
                                            <div class="h3">{{ variant.name }}</div>
                                            <div class="row">
                                                <div class="col-6">
                                                    <label for="quantity_purchased[{{ item.id }}]">Qty <br>Purchased</label>
                                                    <div class="input-group igq-mod">
                                                        <div class="mr-1">
                                                            <input class="form-control form-control-lg quantity-selector text-center" id="quantity_purchased[{{ item.id }}]" type="number" value="{{ item.quantity_purchased }}" min="0" max="99" placeholder="{{ item.quantity_purchased }}" data-id="{{item.id}}" name="quantity_purchased[{{ item.id }}]">
                                                        </div>
                                                        <div class="btn-group-vertical">
                                                            <button class="btn btn-default btn-xs btn-sq-xs btn-add" type="button"><i class="fa fa-chevron-up"><span class="sr-only fsd1">Increase Purchased Qty</span></i></button>
                                                            <button class="btn btn-default btn-xs btn-sq-xs btn-remove" type="button"{{ item.quantity_purchased == 0 ? ' disabled' : '' }}><i class="fa fa-chevron-down"><span class="sr-only fsd1">Decrease Purchased Qty</span></i></button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <label for="registryitem_quantity[{{ item.id }}]">Qty <br>Wanted</label>
                                                    <div class="input-group igq-mod">
                                                        <div class="mr-1">
                                                            <input class="form-control form-control-lg quantity-selector text-center" id="registryitem_quantity[{{ item.id }}]" type="number" value="{{ item.quantity }}" min="1" maxlength="2" placeholder="{{ item.quantity }}" data-id="{{item.id}}" name="registryitem_quantity[{{ item.id }}]">
                                                        </div>
                                                        <div class="btn-group-vertical">
                                                            <button class="btn btn-default btn-xs btn-sq-xs btn-add" type="button"><i class="fa fa-chevron-up"><span class="sr-only fsd1">Increase Wanted Qty</span></i></button>
                                                            <button class="btn btn-default btn-xs btn-sq-xs btn-remove" type="button"{{ item.quantity <= 1 ? ' disabled' : '' }}><i class="fa fa-chevron-down"><span class="sr-only fsd1">Decrease Wanted Qty</span></i></button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-primary btn-block" data-dismiss="modal">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        {% endif %}

                        {% if registry.customer_id == app.user.id %}
                        <li class="qty-remove">
                            <button class="btn btn-link btn-sm px-0" data-toggle="modal" data-target="#modal_remove_{{ variant.id }}" type="button"><i class="fa fa-times"></i><span>Remove</span></button>
                            {# Begin remove modal #}
                            <div class="modal fade" id="modal_remove_{{ variant.id }}" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog modal-sm">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <div class="h3 modal-title">Delete this item?</div>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Remove this item from your Registry?</p>
                                            <div class="h3">{{ variant.name }}</div>
                                        </div>
                                        <div class="modal-footer">
                                            <div class="flex-fill">
                                                <button class="btn btn-default btn-block" data-dismiss="modal" type="button">Cancel</button>
                                                <a href="{{app.url}}/registry/item/{{ item.id }}/delete" class="btn btn-danger btn-block">Delete</a>                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {# End remove modal #}
                        </li>
                    {% endif %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="quantity-selector-{{ item.id }}">Qty</label>
                <div class="input-group igq-mod">
                    <div class="mr-1">
                        <input type="number" value="1" min="1" maxlength="2" placeholder="1" class="form-control form-control-lg px-1 quantity-selector text-center" id="quantity-selector-{{ item.id }}" name="add_to_cart[{{ item.id }}]">
                    </div>
                    <div class="btn-group-vertical mr-3">
                        <button type="button" class="btn btn-default btn-xs btn-sq-xs btn-add"><i class="fa fa-chevron-up"><span class="sr-only fsd1">Increase Qty</span></i></button>
                        <button class="btn btn-default btn-xs btn-sq-xs btn-remove" type="button" disabled><i class="fa fa-chevron-down"><span class="sr-only fsd1">Decrease Qty</span></i></button>
                    </div>
                    <button class="btn btn-lg btn-primary btn-cart flex-fill" name="action" value="add/{{ item.id }}">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</div>
        
{% endfor %}
</div></div>

{% if registry.privacy == 'public' or registry.privacy == 'unlisted' %}
<div class="dropdown text-right">
    <button class="btn btn-default dropdown-toggle btn-xs-block" type="button" id="dropMana" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span>Manage Registry</span><i class="fa fa-angle-down"></i></button>
    <div class="dropdown-menu dropdown-menu-right col col-md-auto px-0" aria-labelledby="dropMana">
        <div class="px-3 py-1">
            <label for="shareregi">Share this Registry:</label>
            <input class="form-control" id="shareregi" type="text" onclick="this.select()" value="{{ app.url}}/registry/{{registry.id}}" readonly="readonly">
        </div>
        <div class="dropdown-divider"></div>
        {% if registry.customer_id == app.user.id %}
        <a class="btn dropdown-item" href="{{ app.url }}/account/registry/{{ registry.id }}/edit">Change Settings</a>
        {% else %}
        <a class="btn dropdown-item disabled" href="#">Change Settings</a>
        {% endif %}
    </div>
</div>
{% endif %}

{% endspaceless %}
{{ forms.end() }}
{% endif %}